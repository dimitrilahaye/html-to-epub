{
	"name": "@dimitrilahaye/html-to-epub",
	"version": "1.0.1",
	"description": "A library to generate EPUB from HTML. Inspired by epub-gen.",
	"license": "MIT",
	"repository": "dimitrilahaye/html-to-epub",
	"homepage": "https://github.com/dimitrilahaye/html-to-epub#readme",
	"bugs": {
		"url": "https://github.com/dimitrilahaye/html-to-epub/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=16.15.1 || >=18.4.0"
	},
	"keywords": [
		"epub",
		"generator",
		"ebook",
		"html"
	],
	"type": "module",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write .",
		"build": "tsc",
		"test": "ava"
	},
	"dependencies": {
		"archiver": "^5.3.2",
		"axios": "^1.7.7",
		"diacritics": "^1.3.0",
		"ejs": "^3.1.10",
		"entities": "^4.5.0",
		"fs-extra": "^11.2.0",
		"mime": "^3.0.0",
		"rehype-parse": "^8.0.5",
		"rehype-stringify": "^9.0.4",
		"retry-axios": "^3.1.3",
		"rx-queue": "^1.0.5",
		"unified": "^10.1.2",
		"unist-util-visit": "^4.1.2",
		"uslug": "^1.0.4",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"@tsconfig/node16": "^16.1.3",
		"@types/archiver": "^5.3.4",
		"@types/diacritics": "^1.3.3",
		"@types/ejs": "^3.1.5",
		"@types/fs-extra": "^11.0.4",
		"@types/mime": "^3.0.4",
		"@types/node": "^18.19.57",
		"@types/uslug": "^1.0.4",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"ava": "^5.3.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"packageManager": "yarn@3.8.6"
}
